<!DOCTYPE html>
<html lang="id">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>SIA Absensi</title>

<style>
*{box-sizing:border-box}

body{
  font-family:'Poppins',Arial,sans-serif;
  background:#121212;
  color:#fff;
  margin:0;
  padding:20px;
}

.container{
  max-width:420px;
  margin:auto;
}

h1{
  text-align:center;
  color:#03DAC5;
  margin-bottom:5px;
}

.datetime{
  text-align:center;
  font-size:13px;
  color:#aaa;
  margin-bottom:20px;
}

.card{
  background:#1E1E1E;
  padding:18px;
  border-radius:14px;
  margin-bottom:20px;
}

.card h3{
  margin-top:0;
  text-align:center;
  color:#03DAC5;
}

input[type="text"]{
  width:100%;
  padding:14px;
  border-radius:10px;
  border:none;
  background:#2E2E2E;
  color:#fff;
  font-size:15px;
  margin-bottom:12px;
}

input[type="submit"]{
  width:100%;
  padding:14px;
  background:#03DAC5;
  color:#000;
  border:none;
  border-radius:10px;
  font-weight:bold;
  cursor:pointer;
}

.result{
  margin-top:12px;
  padding:12px;
  background:#272727;
  border-radius:10px;
  word-break:break-all;
  font-size:14px;
}

.footer{
  text-align:center;
  font-size:13px;
  color:#777;
}
</style>

<script>
function updateDateTime(){
  const now=new Date();
  document.getElementById("datetime").innerText=
    now.toLocaleDateString("id-ID",{
      weekday:"long",
      year:"numeric",
      month:"long",
      day:"numeric"
    })+" â€¢ "+
    now.toLocaleTimeString("id-ID");
}
setInterval(updateDateTime,1000);
</script>
</head>

<body onload="updateDateTime()">

<div class="container">
  <h1>SIA Absensi</h1>
  <div id="datetime" class="datetime"></div>

  <!-- DEKRIPSI -->
  <div class="card">
    <h3>Dekripsi</h3>
    <form method="POST" action="/decrypt">
      <input type="text" name="text" placeholder="Masukkan teks terenkripsi" required />
      <input type="submit" value="Dekripsi" />
    </form>

    <% if (typeof decrypted !== 'undefined' && decrypted) { %>
      <div class="result">
        <strong>Hasil Dekripsi:</strong><br>
        <%= decrypted %>
      </div>
    <% } %>
  </div>

  <!-- ENKRIPSI -->
  <div class="card">
    <h3>Enkripsi</h3>
    <form method="POST" action="/encrypt">
      <input type="text" name="text" placeholder="Masukkan teks" required />
      <input type="submit" value="Enkripsi" />
    </form>

    <% if (typeof encrypted !== 'undefined' && encrypted) { %>
      <div class="result">
        <strong>Hasil Enkripsi:</strong><br>
        <%= encrypted %>
      </div>
    <% } %>
  </div>

  <div class="footer">
    Created by <a href="https://github.com/xzeeeeen" style="color:#03DAC5;text-decoration:none">_xzeeeeen</a>
  </div>
</div>

</body>
</html>
